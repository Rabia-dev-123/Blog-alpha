

<div class="container" style="min-height: 80vh;">
   <div class="row justify-content-center align-items-center">
    <div class=" card shadow col-6 p-5">
<h2 class="mb-5">Edit User Profile</h2>

<%= form_with(model: @user, local: true) do |f| %>
    <div class="row mb-3">
          <%= f.label :username, class: "col-2 col-form-label" %>
    <div class="col-sm-10">
            <%= f.text_field :username, class: "form-control" %>
    </div>
  </div>
  <div class="row mb-3">
  <%= f.label :email, class: "col-2 col-form-label" %>
    <div class="col-sm-10">
       <%= f.text_field :email, class: "form-control" %>
    </div>
  </div>
  <div class="row mb-3">
        <%= f.label :password, class: "col-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.password_field :password, class: "form-control", placeholder: "Leave blank to keep current password" %>
    </div>
  </div>
  <button type="submit" class="btn btn-primary">Update User</button>
<%end%>
</div>
</div>
</div>