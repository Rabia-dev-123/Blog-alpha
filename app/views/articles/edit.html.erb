<div id="page-content">
<h1 class="text-center mt-4"> Edit Articles</h1>

<div class="container">

  

  <div class="row justify-content-center">
    <div class="col-10">
<%= render "shared/Errormsg"%>
      <%= form_with scope: :article, url: articles_path, class: "shadow p-3 mb-3 bg-info rounded" ,local: true do |f| %>

        <div class="form-group row mb-3">
          <%= f.label :title, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of article" %>
          </div>
        </div>

        <div class="form-group row mb-3">
          <%= f.label :description, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_area :description, rows: 10, class: "form-control shadow rounded" ,placeholder: "Title of article" %>
          </div>
        </div>

        <div class="text-center">
          <%= f.submit "Update Article", class: "btn btn-outline-light btn-lg" %>
        </div>

      <% end %>

      <div class="mt-3 text-center">
        <%= link_to "[Back to articles]", articles_path, class: "text-info"  %>
      </div>

    </div>
  </div>
</div>


