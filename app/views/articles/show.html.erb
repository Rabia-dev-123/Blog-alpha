<div id="page-content">
<h1 class="text-center mt-4"> ShowArticles</h1>

 <div class="container">
 <div class="row justify-content-md-center" >
      <div class="col-8 mt-4">
<div class="card text-center shadow mb-5 bg-body rounded">
 <div> <h5 class="card-header fst-italic">by <%= article.user.username if article.user %></h5> </div>
  <div class="card-body">
    <h5 class="card-title text-success"><%= @article.title %></h5>
    <p class="card-text"><%= @article.description %></p>
 

 <%= link_to "Edit", edit_article_path(@article),  class:"btn btn-outline-primary"%>
<%= form_with model: @article, method: :delete, data: { confirm: "Are you sure?" }, class: "d-inline" do %>
  <%= submit_tag "Delete", class: "btn btn-outline-danger" %>
<% end %> </div>
   <div class="card-footer text-muted">
 <small>Created <%= time_ago_in_words(@article.created_at) %> ago, 
            edited <%= time_ago_in_words(@article.updated_at) %> ago</small>  </div>
</div>
</div>
</div>

</div>
</div>
